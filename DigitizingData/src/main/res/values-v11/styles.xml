<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Dividers in layout -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!--  <item name="android:background">?android:attr/listDivider</item> -->
        <item name="android:background">@color/light_blue</item>
    </style>

    <!-- Text-->
    <style name="beginMeetingDivider">
        <item name="android:textColor">@color/ledger_link_white</item>
        <item name="android:background">@color/ledger_link_light_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text styles -->


    <style name="generalnotitle">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>

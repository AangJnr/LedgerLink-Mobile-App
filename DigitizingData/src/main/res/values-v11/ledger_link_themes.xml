    <style name="LedgerLinkActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@color/ledger_link_dark_blue</item>
        <item name="android:titleTextStyle">@style/LedgerLinkActionBarTextAppearance</item>
        <!--  <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>-->

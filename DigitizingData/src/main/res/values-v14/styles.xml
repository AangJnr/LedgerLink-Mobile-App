        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="RegularTextSmall" parent="android:TextAppearance.Small">
        <item name="android:fontFamily">normal</item>
        <item name="android:textColor">@color/ledger_link_black</item>

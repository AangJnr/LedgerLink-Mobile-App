<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Dividers in layout -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!--  <item name="android:background">?android:attr/listDivider</item> -->
        <item name="android:background">@color/light_blue</item>
    </style>

    <!-- Text styles -->
    <style name="SubHeading" parent="android:TextAppearance.Medium">
        <item name="android:background">@drawable/light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="SubHeadingLowCaps" parent="android:TextAppearance.Medium">
        <item name="android:background">@drawable/light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:gravity">left</item>
    </style>


    <!-- Regular heading -->
    <style name="RegularHeading">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MainHeading" parent="android:TextAppearance.Medium">
        <item name="android:background">@drawable/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">bold</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>

    </style>

    <style name="TrainingModeBanner" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">bold</item>
    </style>

    <style name="HeadingAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">bold</item>

    </style>

    <style name="NormalEditText">

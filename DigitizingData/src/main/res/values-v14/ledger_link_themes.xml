    <style name="LedgerLinkActionBarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- <item name="android:textSize">@dimen/abs__action_bar_title_text_size</item> -->
        <item name="android:textColor">@color/ledger_link_white</item>
    </style>

    <style name="LedgerLinkActionBarSubTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/ledger_link_white</item>
    </style>

    <style name="LedgerLinkActionBarTabBarStyle" parent="Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:divider">@null</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerPadding">15dip</item>
        <item name="android:background">@color/ledger_link_light_blue</item>
        <item name="divider">@null</item>
    </style>

    <style name="LedgerLinkActionBarTabStyle" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:divider">@null</item>
        <item name="android:background">@drawable/actionbar_tab_selector</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
    </style>

    <style name="LedgerLinkActionBarTabTextStyle" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textAppearance">@null</item>
        <item name="android:textColor">@drawable/actionbar_tab_text_selector</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
    </style>



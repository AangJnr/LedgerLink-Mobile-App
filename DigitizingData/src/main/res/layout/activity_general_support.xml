<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.applab.ledgerlink.GeneralSupportActivity">

    <TextView
        android:text="General Support"
        android:id="@+id/TXTGSHeading"
        android:textSize="14dp"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_height="2dp"
        android:background="@color/ledger_link_black"
        android:layout_width="match_parent"
        android:id="@+id/GSSeparator"
        android:layout_below="@+id/TXTGSHeading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you received support?"
        android:layout_below="@+id/GSSeparator"
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/TXTGSQuestion"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GSSPINNER"
        android:layout_below="@+id/TXTGSQuestion"
        android:paddingTop="@dimen/dp_10"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:layout_below="@+id/GSSPINNER"
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/TXTGSComment"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:layout_below="@+id/TXTGSComment"
        android:id="@+id/EditGSComment"/>

</RelativeLayout>

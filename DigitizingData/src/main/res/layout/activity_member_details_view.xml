<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- I fully qualify the names coz R.id is universal -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVMemberNo"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Member Number" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVMemberNo"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVSurname"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Surname" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVSurname"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Muhahala" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVOtherNames"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Other Names"
                android:textStyle="normal" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVOtherNames"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Moses Oscar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVGender"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sex (M/F)" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVGender"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Male" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVAge"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Age" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVAge"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="27" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVOccupation"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="What does this member do to make money?" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVOccupation"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Application Analyst" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVPhone"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Phone number" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVPhone"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0779881904" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVCyclesCompleted"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Number of cycles member completed" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMDVCyclesCompleted"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3" />
        </LinearLayout>

        <!--list view of meeting details-->
        <!--  <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginBottom="20dip">

              <org.applab.digitizingdata.fontutils.TypefaceTextView
                      style="@style/SubHeading"
                      android:id="@+id/lblMDCurrentCycleHeading"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="CURRENT CYCLE" />


         </LinearLayout> -->

        <!--list view of meeting details-->
        <LinearLayout
            android:id="@+id/layoutMDMiddleCycleStartDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDMiddleCycleStartHeading"
                style="@style/SubHeading"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="MIDDLE CYCLE START" />


            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDMiddleCycleInformationHeading"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="---" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDMiddleCycleSavings"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total Savings 0 UGX" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDMiddleCycleWelfare"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total Welfare 0 UGX" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDMiddleCycleOutstandingWelfare"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total Outstanding Welfare 0 UGX" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDMiddleCycleLoansOutstanding"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Loans Outstanding 0 UGX" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@+id/txtRMRCallFullNames"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:text="FULL NAME" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/ListSubItems"
                android:id="@+id/txtRMRCallAttendance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRMRCallFullNames"
                android:paddingLeft="5dp"
                android:text="Attended 5 Missed 3" />
        </RelativeLayout>

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""
            android:id="@+id/chkRMRCallAttendance"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="left" />
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.applab.ledgerlink.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileVslaCode"
        android:paddingTop="@dimen/profile_padding"/>

    <TextView
        android:id="@+id/profileVslaName"
        android:layout_below="@+id/profileVslaCode"
        android:paddingTop="@dimen/profile_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profileVslaRegion"
        android:layout_below="@+id/profileVslaName"
        android:paddingTop="@dimen/profile_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profileContactPerson"
        android:layout_below="@+id/profileVslaRegion"
        android:paddingTop="@dimen/profile_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profilePhoneNumber"
        android:layout_below="@+id/profileContactPerson"
        android:paddingTop="@dimen/profile_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profilePositionInVsla"
        android:layout_below="@+id/profilePhoneNumber"
        android:paddingTop="@dimen/profile_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

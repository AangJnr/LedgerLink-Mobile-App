<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView android:text="@string/to_edit_your_vslacode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDRTitle"
        android:textSize="16dp"/>

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:id="@+id/lblDRPassKey"
        android:layout_below="@+id/lblDRTitle"
        android:text="@string/enter_new_vslacode"/>

    <EditText
        android:id="@+id/txtDREditVslaCode"
        style="@style/CustomEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDRPassKey"
        android:paddingTop="20dp"
        android:text="@string/vsla_code"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <org.applab.ledgerlink.fontutils.TypefaceButton
            android:id="@+id/saveDialogVslaCode"
            style="@style/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="Save" />

        <org.applab.ledgerlink.fontutils.TypefaceButton
            android:id="@+id/cancelDialogVslaCode"
            style="@style/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="Cancel" />

    </LinearLayout>


</LinearLayout>
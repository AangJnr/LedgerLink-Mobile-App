<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >

    <TextView
            android:id="@+id/txtRLRHLoanNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="2dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:gravity="left"
            android:text="Loan No:"
            android:textSize="18sp" />

    <TextView
            android:id="@+id/txtRLRHMeetingDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRLRHLoanNo"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:text="Date:"
            android:textSize="16sp" />


    <TextView
            android:id="@+id/txtRLRHAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRLRHMeetingDate"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Amount:"
            android:textSize="17sp" />

    <TextView
            android:id="@+id/txtRLRHRollover"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRLRHAmount"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Rollover:"
            android:textSize="16sp" />
    <TextView
            android:id="@+id/txtRLRHComments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRLRHRollover"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Comments:"
            android:textSize="16sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularTextBold"
                android:id="@+id/lblRvwMembersHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Members"
                />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularTextBold"
                android:id="@+id/lblRvwMembersHeading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review and confirm that all information is correct. Press the memberâ€™s name to correct an entry. If you wish to review it later, you may exit and come back later."
                />


        <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@+id/lblRvwMembersSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />

        <ListView
                style="@style/List"
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice" >

        </ListView>

        <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@android:id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_members_list"
                />
            </LinearLayout>






</ScrollView>
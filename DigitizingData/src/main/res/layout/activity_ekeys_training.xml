<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.applab.ledgerlink.EKeysTrainingActivity">

    <TextView
        android:text="EKeys Training"
        android:id="@+id/TXTEKTHeading"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_height="2dp"
        android:background="@color/ledger_link_black"
        android:layout_width="match_parent"
        android:id="@+id/EKTSeparator"
        android:layout_below="@+id/TXTEKTHeading"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LVEKTraining"
        android:layout_below="@+id/EKTSeparator"
        android:paddingTop="10dp"/>

</RelativeLayout>

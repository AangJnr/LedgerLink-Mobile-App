<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frmNCP_top_control_bar">

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/RegularTextInstruction"
            android:id="@+id/txtNCP_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:text="Update register by adding new members and removing those who are no longer a part of your group." />
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/List"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_below="@android:id/empty">

    </ListView>

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        style="@style/RegularText"
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_members_list"
        android:layout_below="@id/frmNCP_top_control_bar" />

</RelativeLayout>

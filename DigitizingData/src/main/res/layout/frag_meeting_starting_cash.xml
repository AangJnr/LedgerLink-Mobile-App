            <!-- Auto entered from figure left in the box at the end of previous meeting: The differnce of cash in bank and cash in box-->
            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@+id/lblExpectedStartingCash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Expected Starting Cash" />

            <!-- Date of Previous meeting, Previous Total Cah in Box , currency -->
            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/ListSmallSubItems"
                android:id="@+id/lblTotalCashInBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblExpectedStartingCash"
                android:text="4 Mar 2014 Total Cash in Box 1,000,000 UGX" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/ListSmallSubItems"
                android:id="@+id/lblCashTakenToBank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTotalCashInBox"
                android:text="Cash Taken to Bank 900,000 UGX" />


            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@+id/lblActualStartingCash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblCashTakenToBank"
                android:text="Actual Starting Cash" />

            <org.applab.digitizingdata.fontutils.TypefaceEditText
                style="@style/NormalEditText"
                android:id="@+id/txtActualStartingCash"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblActualStartingCash"
                android:inputType="number"
                android:text="" />


            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@+id/lblStartingCashCurrency"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblActualStartingCash"
                android:inputType="number"
                android:layout_toRightOf="@+id/txtActualStartingCash"
                android:text=" UGX" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                style="@style/RegularText"
                android:id="@+id/lblStartingCashComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtActualStartingCash"
                android:text="Comment" />

            <org.applab.digitizingdata.fontutils.TypefaceEditText
                style="@style/NormalEditText"
                android:id="@+id/txtStartingCashComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblStartingCashComment"
                android:inputType="textMultiLine" />

        </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frmMLRepayHFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            android:id="@+id/lblMLRepayHFullName"
            style="@style/RegularTextListItemsBold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Moses Oscar Muhahala" />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            android:id="@+id/lblMLRepayHInstruction"
            style="@style/RegularTextInstruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/loan_repayment_instruction" />

        <!-- <org.applab.digitizingdata.fontutils.TypefaceTextView
             style="@style/RegularText"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dip"
             android:text="01-JUL-2013"
             android:id="@+id/lblMLRepayHMeetingDate"/> -->

        <!-- <org.applab.digitizingdata.fontutils.TypefaceTextView
             android:id="@+id/lblMLRepayHLoanNo"
             style="@style/RegularText"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dip"
             android:text="Loan Number" /> -->
        <LinearLayout
            android:id="@+id/frmMLRepayHLoanRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/frmMLRepayHLoanNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepayHLoanNo"
                    style="@style/RegularTextBold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5"
                    android:text="@string/loan_number"
                    android:textAlignment="textEnd"
                    tools:ignore="UnusedAttribute" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/txtMLRepayHLoanNo"
                    style="@style/RegularTextBold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-8dip"
                    android:layout_weight="4.5"
                    android:text="10"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHAmount"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/amount_paid" />

            <LinearLayout
                android:id="@+id/frmMLRepayHAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtMLRepayHAmount"
                    style="@style/NormalEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:inputType="number"
                    android:text=""
                    android:textAlignment="viewEnd" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepayHCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/ugx" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHComment"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtMLRepayHComment"
                style="@style/NormalEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="viewEnd" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHSection1"
                style="@style/SubHeading"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:text="@string/new_balance" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHInstruction2"
                style="@style/RegularTextInstruction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/loan_repayment_instruction2" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHBalance"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/outstanding_after_payment" />


            <LinearLayout
                android:id="@+id/frmMLRepayHBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/txtMLRepayHBalance"
                    style="@style/RegularText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:clickable="true"
                    android:inputType="number"
                    android:text=""
                    android:textAlignment="textEnd" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepayHLBCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/ugx" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHInterest"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/interest_added" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHInterestDesc"
                style="@style/RegularTextSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:text="@string/interest_rate" />

            <LinearLayout
                android:id="@+id/frmMLRepayHInterest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtMLRepayHInterest"
                    style="@style/NormalEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:inputType="number"
                    android:text=""
                    android:textAlignment="textEnd" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepaydHCurrencyInt"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/ugx" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHTotal"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/outstanding_balance_with_interest" />

            <LinearLayout
                android:id="@+id/frmMLRepayHTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/txtMLRepayHTotal"
                    style="@style/RegularText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:clickable="true"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepayHCurrencyTotal"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/ugx" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMLRepayHDateDue"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/next_payment_date" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtMLRepayHDateDue"
                style="@style/TextAccentColor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="bold" />

            <LinearLayout
                android:id="@+id/frmMLRepayHHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepayHSection2"
                    style="@style/SubHeading"
                    android:layout_width="fill_parent"
                    android:layout_height="25dip"
                    android:text="@string/payment_history" />

                <!-- <org.applab.digitizingdata.fontutils.TypefaceTextView
                     android:id="@+id/lblMLRepayHOutstandingLoans"
                     style="@style/RegularTextBold"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:text="Outstanding" />

                 <org.applab.digitizingdata.fontutils.TypefaceTextView
                     android:id="@+id/lblMLRepayHPrinciple"
                     style="@style/RegularText"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:text="Principle" />

                 <org.applab.digitizingdata.fontutils.TypefaceTextView
                     android:id="@+id/lblMLRepayHInterestOnLoan"
                     style="@style/RegularText"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:text="Interest" /> -->


                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblMLRepayHCycleSpan"
                    style="@style/RegularTextInstructionBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/cycle_nov" />

                <ListView
                    android:id="@android:id/list"
                    style="@style/List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="2dip"
                    android:choiceMode="singleChoice"
                    android:divider="@null"
                    android:dividerHeight="0dp" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@android:id/empty"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="@string/no_previous_payments" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
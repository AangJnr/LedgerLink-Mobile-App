<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svAMParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMInstruction"
                style="@style/RegularTextInstruction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <requestFocus />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMemberNo"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/member_number" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/cboAMMemberNo"
                style="@style/NormalEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_weight="0.5"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <!--<org.applab.digitizingdata.fontutils.TypefaceEditText-->
            <!--style="@style/NormalEditText"-->
            <!--android:id="@+id/txtAMMemberNo"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="number"-->
            <!--android:text="" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMSurname"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/surname" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMSurname"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMOtherName"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/other_name" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMOtherName"
                style="@style/CustomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMGender"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/sex_m_f" />

            <Spinner
                android:id="@+id/cboAMGender"
                style="@style/CustomEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:prompt="@string/add_member_gender_prompt"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMAge"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/age" />


            <Spinner
                android:id="@+id/cboAMAge"
                style="@style/CustomEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:prompt="@string/add_member_gender_prompt"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMOccupation"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_member_does_to_make_money" />

            <Spinner
                android:id="@+id/cboAMOccupation"
                style="@style/CustomEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:prompt="@string/add_member_profession_prompt"
                android:spinnerMode="dropdown" />

            <!--
            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMOccupation"
                style="@style/CustomEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMPhone"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMPhoneNo"
                style="@style/CustomEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMCyclesCompleted"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/number_of_cycles_member_completed" />

            <Spinner
                android:id="@+id/cboAMCycles"
                style="@style/CustomEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Middle Cycle start info -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMiddleCycleStart"
                style="@style/SubHeadingLowCaps"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:text="@string/middle_cycle_start_smallcap" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMiddleStartPrompt"
                style="@style/RegularTextInstruction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/if_current_cycle_has_started_an_your_group_has_held_one_or_more_meetings_already" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVAmountSavedInCurrentCycle"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount_this_member_has_saved_in_current_cycle_so_far" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtMDVAmountSavedInCurrentCycle"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblNCCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleWelfareLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_welfare_saved_by_this_member_during_current_cycle_so_far" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMWelfareCorrection"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMMWelfareCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleOutstandingWelfareLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_outstanding_welfare_borrowed_by_this_member_during_current_cycle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMOutstandingWelfareCorrection"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMMOutstandingWelfareCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblOutstandingWelfareDueDateLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_is_the_due_date_of_the_outstanding_welfare" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtOutstandingWelfareDueDate"
                style="@style/CustomEditText"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:text="" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblRvwMembersLoanNumber"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loan_number_for_this_members_regular_loan_outstanding" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtNCGSWOutstandingLoanNumber"
                style="@style/CustomEditText"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVOutstandingLoanAmount"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount_of_this_members_regular_loan_outstanding" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtMDVOutstandingLoanAmount"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblNCCurrency2"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />
            </LinearLayout>


            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblNCGSWLoanNextRepaymentDate"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_is_the_next_repayment_expected_for_this_loan" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtNCGSWLoanNextRepaymentDate"
                style="@style/CustomEditText"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
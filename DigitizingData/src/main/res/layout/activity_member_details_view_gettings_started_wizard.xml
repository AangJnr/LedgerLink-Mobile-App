<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svAMParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMInstruction"
                style="@style/RegularTextInstruction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />
            <requestFocus />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMemberNo"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Member number" />

            <Spinner
                android:id="@+id/cboAMMemberNo"
                style="@style/NormalEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:spinnerMode="dropdown" />
            <!--<org.applab.digitizingdata.fontutils.TypefaceEditText-->
            <!--style="@style/NormalEditText"-->
            <!--android:id="@+id/txtAMMemberNo"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="number"-->
            <!--android:text="" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMSurname"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Surname" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMSurname"
                style="@style/NormalEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMOtherName"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Other name" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMOtherName"
                style="@style/NormalEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMGender"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sex (M/F)" />

            <Spinner
                android:id="@+id/cboAMGender"
                style="@style/NormalEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:prompt="@string/add_member_gender_prompt"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMAge"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Age" />


            <Spinner
                android:id="@+id/cboAMAge"
                style="@style/NormalEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:prompt="@string/add_member_gender_prompt"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMOccupation"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="What does this member do to make money?" />

            <Spinner
                android:id="@+id/cboAMOccupation"
                style="@style/NormalEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:prompt="@string/add_member_profession_prompt"
                android:spinnerMode="dropdown" />

            <!--
            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMOccupation"
                style="@style/NormalEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMPhone"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Phone number" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMPhoneNo"
                style="@style/NormalEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMCyclesCompleted"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Number of cycles member completed" />

            <Spinner
                android:id="@+id/cboAMCycles"
                style="@style/NormalEditText"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Middle Cycle start info -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMiddleCycleStart"
                style="@style/SubHeadingLowCaps"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:text="Middle Cycle Start" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMiddleStartPrompt"
                style="@style/RegularTextInstruction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="If current cycle has started, and your group has held one or more meetings already, enter current totals for member so far." />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVAmountSavedInCurrentCycle"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total amount this member has saved in current cycle so far" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtMDVAmountSavedInCurrentCycle"
                    style="@style/NormalEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblNCCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="UGX" />
            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleWelfareLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total welfare saved by this member during current cycle so far" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMWelfareCorrection"
                    style="@style/NormalEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMMWelfareCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="UGX" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleOutstandingWelfareLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total outstanding welfare borrowed by this member during current cycle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMOutstandingWelfareCorrection"
                    style="@style/NormalEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMMOutstandingWelfareCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="UGX" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblOutstandingWelfareDueDateLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="When is the due date of the outstanding welfare" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtOutstandingWelfareDueDate"
                style="@style/NormalEditText"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:text="" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblRvwMembersLoanNumber"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan number for this member's regular loan outstanding" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtNCGSWOutstandingLoanNumber"
                style="@style/NormalEditText"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblMDVOutstandingLoanAmount"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Total amount of this member's regular loan outstanding" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtMDVOutstandingLoanAmount"
                    style="@style/NormalEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblNCCurrency2"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="UGX" />
            </LinearLayout>


            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblNCGSWLoanNextRepaymentDate"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="When is the next repayment expected for this loan" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtNCGSWLoanNextRepaymentDate"
                style="@style/NormalEditText"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
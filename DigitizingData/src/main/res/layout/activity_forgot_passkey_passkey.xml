<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.applab.ledgerlink.DataRecoveryActivity">

    <TextView android:text="@string/to_recover_your_passkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDRTitle"
        android:textSize="16dp"/>

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:id="@+id/lblDRPassKey"
        android:layout_below="@+id/lblDRTitle"
        android:text="@string/enter_new_passkey"/>

    <EditText
        android:id="@+id/txtDRPassKey"
        style="@style/CustomEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDRPassKey"
        android:inputType="numberPassword"
        android:paddingTop="20dp" />

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:id="@+id/lblDRConfirmPassKey"
        android:layout_below="@+id/txtDRPassKey"
        android:text="@string/comfirm_new_passkey"/>

    <EditText
        android:id="@+id/txtDRComfirmPassKey"
        style="@style/CustomEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDRConfirmPassKey"
        android:inputType="numberPassword"
        android:paddingTop="20dp" />

    <!--<org.applab.ledgerlink.fontutils.TypefaceButton-->

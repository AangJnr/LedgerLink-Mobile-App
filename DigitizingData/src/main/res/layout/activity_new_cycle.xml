<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical">

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCHeader"
                style="@style/RegularTextInstruction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter all cycle information then select next." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <!-- Fully qualify the names coz R.id is universal -->

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCSharePrice"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingMultiplier="0.8"
                android:text="Star (Share) value" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCShareValueDesc"
                style="@style/RegularTextSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:text="Amount that it costs to buy one share" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.digitizingdata.fontutils.TypefaceEditText
                    android:id="@+id/txtNCSharePrice"
                    style="@style/NormalEditText"
                    android:layout_width="200dip"
                    android:layout_height="fill_parent"
                    android:inputType="number"
                    android:text="" />

                <org.applab.digitizingdata.fontutils.TypefaceTextView
                    android:id="@+id/lblNCCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="UGX" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:orientation="vertical">

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCMaxShares"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Maximum number of stars (shares) a member may purchase per meeting" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <!-- <org.applab.digitizingdata.fontutils.TypefaceEditText
                     style="@style/NormalEditText"
                     android:id="@+id/txtNCMaxShares"
                     android:layout_width="300dip"
                     android:layout_height="wrap_content"
                     android:inputType="number"
                     android:layout_weight="7" /> -->

                <Spinner
                    android:id="@+id/cboNCMaxShares"
                    style="@style/RegularText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <org.applab.digitizingdata.fontutils.TypefaceTextView
                    android:id="@+id/lblNCSpace1"
                    style="@style/RegularText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:paddingLeft="5dp"
                    android:text="Stars" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCStartDate"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date your cycle will begin" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/txtNCStartDate"
                style="@style/TextAccentColor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="01-Jul-2013" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCEndDate"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date your cycle will end" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/txtNCEndDate"
                style="@style/TextAccentColor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="30-Jun-2013" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblNCInterestRate"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Loan Interest Rate per Month" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <org.applab.digitizingdata.fontutils.TypefaceEditText
                    android:id="@+id/txtNCInterestRate"
                    style="@style/NormalEditText"
                    android:layout_width="350dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:inputType="number" />

                <org.applab.digitizingdata.fontutils.TypefaceTextView
                    android:id="@+id/lblNCSpaceIntRate"
                    style="@style/RegularText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:text="%" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
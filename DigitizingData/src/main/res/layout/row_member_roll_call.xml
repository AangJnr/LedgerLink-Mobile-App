<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:id="@+id/layoutRMRCall">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                style="@style/RegularTextListItems"
                android:id="@+id/txtRMRCallFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="@string/name_default" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                style="@style/ListSmallSubItems"
                android:id="@+id/txtRMRCallAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRMRCallFullName"
                android:text="@string/default_attend_list" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/chkRMRCallAttendance"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
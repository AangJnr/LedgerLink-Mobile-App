<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frmMAH_top_control_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:orientation="vertical">


        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMDMultipleCycles"
            style="@style/RegularTextInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have more than one active cycle. Please choose the cycle for the new meeting." />

        <ListView
            android:id="@+id/lstSelectCycleToEdit"
            style="@style/RegularTextDateListItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:choiceMode="singleChoice"
            android:dividerHeight="2dip">


        </ListView>


    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="top"
    android:background="@color/ledger_link_dark_blue"
    android:baselineAligned="true"
    android:clickable="true"
    android:orientation="horizontal">


    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:id="@+id/backAction"
        style="@style/ActionBarItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_weight=".18"
        android:clickable="true"
        android:drawableLeft="@drawable/icons_back"
        android:drawablePadding="1dip"
        android:gravity="center_vertical"
        android:paddingRight="3dip"
        android:scaleType="fitCenter"
        android:text="@string/back"
        android:textColor="@color/white"
        android:onClick="backAction"/>


    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:id="@+id/nextAction"
        style="@style/ActionBarItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:drawablePadding="1dip"
        android:drawableRight="@drawable/icons_next"
        android:gravity="center_vertical"
        android:onClick="nextAction"
        android:paddingRight="3dip"
        android:text="Next"
        android:textColor="@color/white" />

</LinearLayout>
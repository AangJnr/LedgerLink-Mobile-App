<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:id="@+id/txtRAHMeetingDate"
        style="@style/RegularText"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dip"
        android:text="@string/default_rollcall_date" />

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:id="@+id/txtRAHAttendance"
        style="@style/RegularText"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtRAHMeetingDate"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:text="@string/present" />

    <org.applab.ledgerlink.fontutils.TypefaceTextView
        android:id="@+id/txtRAHComments"
        style="@style/RegularText"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@id/txtRAHAttendance"
        android:text="@string/apologized" />
</RelativeLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="01-JUL-2013"
            android:id="@+id/lblMCBFMeetingDate"
           />

        <!-- Cash in Box in currently running meeting -->
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblTotalCashInBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblMCBFMeetingDate"
            android:text="Total Cash In Box 1,000,000 UGX" />


        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="Cash Collected"
            android:id="@+id/lblCashCollected"
            android:layout_gravity="left" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblExpectedStartingCash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCashCollected"
            android:text="Expected Starting Cash XX UGX" />
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblActualStartingCash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblExpectedStartingCash"
            android:text="Actual Starting Cash XX UGX" />
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblCashDifference"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblActualStartingCash"
            android:text="Difference XX UGX (Between actual amount and expected amount)" />
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblCashBookComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCashDifference"
            android:text="Picked from comment entered on starting cash page " />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="MEETING ACTIVITY"
            android:id="@+id/lblMeetingActivity"
            android:layout_gravity="left" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblSavings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblSavings"
            android:text="Savings XX UGX" />
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblLoanRepayments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblSavings"
            android:text="Loan Repayments XX UGX" />
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblFines"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblLoanRepayments"
            android:text="Fines XX UGX" />
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/ListSubItems"
            android:id="@+id/lblNewLoans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblFines"
            android:text="New Loans XX UGX " />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="Cash To Bank"
            android:id="@+id/lblCashToBank"
            android:layout_gravity="left" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblCashToBankMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCashToBank"
            android:text="If you will take some of the Total Cash in Box to the bank after the meeting, enter the amount. It will then be subtracted from the Expected Starting Cash for your next meeting." />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblCashToBankAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCashToBankMessage"
            android:text="Cash to Bank" />

        <org.applab.digitizingdata.fontutils.TypefaceEditText
            style="@style/NormalEditText"
            android:id="@+id/txtCashToBank"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblCashToBankAmount"
            android:inputType="number"
            android:text="" />
    </LinearLayout>
</ScrollView>


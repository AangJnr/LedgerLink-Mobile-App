<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Cash in Box in currently running meeting -->
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblTotalCashInBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Total Cash In Box 0 UGX" />


        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="Starting Cash"
            android:id="@+id/lblCashCollected"
            android:layout_gravity="left" />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblExpectedStartingCash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Expected Starting Cash 0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblActualStartingCash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Actual Starting Cash 0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblCashDifference"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Difference 0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblCashFromBank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblLoanFromBank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblCashBookComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Comment  " />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="MEETING ACTIVITY"
            android:id="@+id/lblMeetingActivity"
            android:layout_gravity="left" />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblSavings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Savings 0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblLoanRepayments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Loan Repayments 0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblFines"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Fines 0 UGX" />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblNewLoans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Loans 0 UGX " />
        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblWelfare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Welfare 0 UGX " />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/ListSmallSubItems"
            android:id="@+id/lblOutstandingWelfare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Outstanding Welfare 0 UGX " />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="Cash To Bank"
            android:id="@+id/lblCashToBank"
            android:layout_gravity="left" />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblCashToBankMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="If you will take some of the Total Cash in Box to the bank after the meeting, enter the amount. It will then be subtracted from the Expected Starting Cash for your next meeting." />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblCashToBankAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cash to Bank" />

        <org.applab.ledgerlink.fontutils.TypefaceEditText
            style="@style/NormalEditText"
            android:id="@+id/txtCashToBank"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0" />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="Bank Loan Repayment"
            android:id="@+id/lblBankLoanRepayment"
            android:layout_gravity="left" />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblBankLOanRepaymentMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="If you will take some of the Total Cash in Box to the bank after the meeting for payment of a loan, enter the amount. It will then be subtracted from the Expected Starting Cash for your next meeting." />

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblBankLoanRepaymentAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bank Loan Repayment" />

        <org.applab.ledgerlink.fontutils.TypefaceEditText
            style="@style/NormalEditText"
            android:id="@+id/txtBankLoanRepayment"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0" />
    </LinearLayout>
</ScrollView>


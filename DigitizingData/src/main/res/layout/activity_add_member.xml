<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gery_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.applab.ledgerlink.fontutils.TypefaceTextView
            android:id="@+id/lblAMInstruction"
            style="@style/SmallerRegularText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/x_required" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardMembersDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            app:contentPadding="5dp">

            <LinearLayout
                android:id="@+id/layoutMembersDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMMemberNo"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="@string/member_number_x" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/cboAMMemberNo"
                        style="@style/NormalEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_background"
                        android:gravity="left"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="vertical">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMSurname"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/surname_x" />

                    <org.applab.ledgerlink.fontutils.TypefaceEditText
                        android:id="@+id/txtAMSurname"
                        style="@style/CustomEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="vertical">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMOtherName"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/other_name_x" />

                    <org.applab.ledgerlink.fontutils.TypefaceEditText
                        android:id="@+id/txtAMOtherName"
                        style="@style/CustomEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMGender"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="@string/sex_m_f_x" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/cboAMGender"
                        style="@style/NormalEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_background"
                        android:gravity="left"
                        android:prompt="@string/add_member_gender_prompt"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMAge"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Age *" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/cboAMAge"
                        style="@style/NormalEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_background"
                        android:gravity="left"
                        android:prompt="@string/add_member_gender_prompt"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="vertical">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMPhone"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number" />

                    <org.applab.ledgerlink.fontutils.TypefaceEditText
                        android:id="@+id/txtAMPhoneNo"
                        style="@style/CustomEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:text="" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:orientation="vertical">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMOccupation"
                        style="@style/RegularText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_member_does_to_make_money" />


                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/cboAMOccupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_background"
                        android:prompt="@string/add_member_profession_prompt"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <org.applab.ledgerlink.fontutils.TypefaceTextView
                        android:id="@+id/lblAMCyclesCompleted"
                        style="@style/RegularText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="@string/number_of_cycles_member_completed" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/cboAMCycles"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/spinner_background"
                        android:gravity="left"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutAMMiddleCycleStartDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleStartHeading"
                style="@style/SubHeading"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:text="@string/middle_cycle_start" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleInformationHeading"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/this_members_information_was_added" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleSavingsLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount_member_has_saved_so_far" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleSavings"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0 UGX" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleSavingsCorrectionLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/actual_amount_if_the_original_total_savings_was_incorrect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMiddleCycleSavingsCorrection"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleSavingCorrectionCommentLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comment" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMMiddleCycleSavingsCorrectionComment"
                style="@style/CustomEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleWelfareLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_welfare_saved_by_this_member_during_current_cycle_so_far" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleWelfare"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0 UGX" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleWelfareCorrectionLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/actual_amount_if_the_original_total_welfare_was_incorrect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMWelfareCorrection"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberSigned"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMMWelfareCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleWelfareCorrectionCommentLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comment" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMMiddleCycleWelfareCorrectionComment"
                style="@style/CustomEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleOutstandingWelfareLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_outstanding_welfare_borrowed_by_member" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleOutstandingWelfare"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0 UGX" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleOutstandingWelfareCorrectionLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/actual_amount_if_the_original_total_outstanding_welfare_was_incorrect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMOutstandingWelfareCorrection"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMMOutstandingWelfareCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblOutstandingWelfareDueDateLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_is_the_due_date_of_the_outstanding_welfare" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtOutstandingWelfareDueDate"
                style="@style/CustomEditText"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:text="" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblRvwMembersLoanNumber"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loan_number_for_this_members_regular_loan_outstanding" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMMOutstandingLoanNumber"
                style="@style/CustomEditText"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleLoansLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount_of_this_members_regular_loan_outstanding" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleLoans"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/o_ugx" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleLoansCorrectionLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/actual_amount_if_the_original_was_incorrect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.applab.ledgerlink.fontutils.TypefaceEditText
                    android:id="@+id/txtAMMiddleCycleLoansCorrection"
                    style="@style/CustomEditText"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

                <org.applab.ledgerlink.fontutils.TypefaceTextView
                    android:id="@+id/lblAMLoanCurrency"
                    style="@style/InlineTextItem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/ugx" />

            </LinearLayout>

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblAMMiddleCycleLoansCorrectionCommentLabel"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comment" />

            <org.applab.ledgerlink.fontutils.TypefaceEditText
                android:id="@+id/txtAMMiddleCycleLoansCorrectionComment"
                style="@style/CustomEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/lblNCAMMLoanNextRepaymentDate"
                style="@style/RegularText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_is_the_next_repayment_expected_for_this_loan" />

            <org.applab.ledgerlink.fontutils.TypefaceTextView
                android:id="@+id/txtAMMLoanNextRepaymentDate"
                style="@style/TextAccentColor"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:text="" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
                    android:textSize="20sp"
                    android:text="Past Loans"
                    android:id="@+id/lblMLIssuedHPastLoans"
                    android:layout_gravity="left"/>

                    -->
        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@android:id/empty"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dip"
            android:text="No Outstanding Balance" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMLIssuedPastLoans"
            style="@style/RegularTextBold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Past Loans" />

        <ListView
            android:id="@android:id/list"
            style="@style/List"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:layout_marginBottom="20dip"/>

    </LinearLayout>
</ScrollView>
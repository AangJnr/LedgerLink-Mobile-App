<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMLIssuedHFullName"
            style="@style/RegularTextListItems"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Moses Oscar Muhahala" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMLIssuedHLoanNo"
            style="@style/RegularText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Loan Number" />

        <org.applab.digitizingdata.fontutils.TypefaceEditText
            android:id="@+id/txtMLIssuedHLoanNo"
            style="@style/NormalEditText"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:inputType="number"
            android:text=""
            android:textAlignment="textEnd" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMLIssuedHAmount"
            style="@style/RegularText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Amount" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginBottom="20dip">

            <org.applab.digitizingdata.fontutils.TypefaceEditText
                android:id="@+id/txtMLIssuedHAmount"
                style="@style/NormalEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_weight="6"
                android:inputType="number"
                android:text=""
                android:textAlignment="textEnd" />

            <org.applab.digitizingdata.fontutils.TypefaceTextView
                android:id="@+id/lblMLIssuedHCurrency"
                style="@style/InlineTextItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="UGX" />
        </LinearLayout>

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMLIssuedHComment"
            style="@style/RegularText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Comment" />

        <org.applab.digitizingdata.fontutils.TypefaceEditText
            android:id="@+id/txtMLIssuedHComment"
            style="@style/NormalEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:inputType="text"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_marginBottom="20dip"
            />


        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblMLIssuedHSection1"
            style="@style/SubHeading"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:text="HISTORY" />

        <!--  <org.applab.digitizingdata.fontutils.TypefaceTextView
              android:id="@+id/lblMLIssuedHOutstandingLoans"
              style="@style/RegularText"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:layout_marginLeft="30dip"
              android:text="Total Balance:" /> -->

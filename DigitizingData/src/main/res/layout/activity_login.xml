<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            style="@style/Logo"
            android:id="@+id/imgVALogo"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_content_desc"
            android:textAlignment="center" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/InTextHeader"
            android:id="@+id/lbl_vsla_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VSLA NAME "
            android:layout_below="@+id/imgVALogo"
            android:layout_alignLeft="@+id/edt_passkey"
            android:layout_alignRight="@+id/edt_passkey"  />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularTextActivationLoginMsg"
            android:id="@+id/lblActivationLoginMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activation Message"
            android:layout_marginTop="50dip"
            android:paddingTop="40dip"
            android:paddingBottom="-5dip"
            android:layout_above="@+id/edt_passkey"
            android:layout_alignLeft="@+id/lbl_vsla_name"
            android:layout_alignRight="@+id/lbl_vsla_name" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularTextLogin"
            android:id="@+id/lblPassKeyPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Passkey"
            android:layout_below="@+id/lbl_vsla_name"
            android:layout_alignLeft="@+id/edt_passkey"
            android:layout_alignRight="@+id/edt_passkey"/>

        <org.applab.digitizingdata.fontutils.TypefaceEditText
            style="@style/EditTextLogin"
            android:id="@+id/edt_passkey"
            android:layout_width="265dip"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Enter Pass Key Here"
            android:layout_below="@+id/lblPassKeyPrompt"
            android:layout_alignLeft="@+id/btnLogin"
            android:textAlignment="center" />

        <requestFocus />


        <org.applab.digitizingdata.fontutils.TypefaceButton
            style="@style/LoginButton"
            android:id="@+id/btnLogin"
            android:layout_width="265dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_passkey"
            android:text="Sign In" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularTextActivationLoginMsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnLogin"
            android:textSize="14sp"
            android:text="Forgot your pass key: \nPlease call 078000000"
            android:layout_alignLeft="@id/btnLogin"/>
        <!--  <TextView
              android:id="@+id/lblSISwitchMode"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/btnLogin"
              android:textSize="18sp"
              android:gravity="left"
              android:paddingTop="2dp"
              android:layout_marginTop="10dp"
              android:textStyle="bold"
              android:textColor="#0000FF"
              android:text="Switch to Training Mode" /> -->


    </RelativeLayout>
</ScrollView>

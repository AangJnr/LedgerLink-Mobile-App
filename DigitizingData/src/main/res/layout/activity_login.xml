<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imgVALogo"
            style="@style/Logo"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_content_desc"
             />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lbl_vsla_name"
            style="@style/InTextHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/edt_passkey"
            android:layout_alignRight="@+id/edt_passkey"
            android:layout_below="@+id/imgVALogo"
            android:text="VSLA NAME " />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblActivationLoginMsg"
            style="@style/RegularTextActivationLoginMsg"
            android:layout_width="@dimen/login_ctrl_width"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt_passkey"
            android:layout_alignLeft="@+id/lbl_vsla_name"
            android:layout_alignRight="@+id/lbl_vsla_name"
            android:paddingTop="15dip"
            android:layout_marginBottom="@dimen/login_margin"
            android:text="Activation Message" />
        <!--
        android:paddingBottom="-5dip"
        android:layout_marginTop="40dip"
        android:paddingTop="25dip" -->

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/lblPassKeyPrompt"
            style="@style/RegularTextLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/edt_passkey"
            android:layout_alignRight="@+id/edt_passkey"
            android:layout_below="@+id/lbl_vsla_name"
            android:text="Passkey" />

        <org.applab.digitizingdata.fontutils.TypefaceEditText
            android:id="@+id/edt_passkey"
            style="@style/EditTextLogin"
            android:layout_width="@dimen/login_ctrl_width"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnLogin"
            android:layout_below="@+id/lblPassKeyPrompt"
            android:hint="Enter Pass Key Here"
            android:inputType="numberPassword"
            android:textAlignment="center" />

        <requestFocus />


        <org.applab.digitizingdata.fontutils.TypefaceButton
            android:id="@+id/btnLogin"
            style="@style/LoginButton"
            android:layout_width="@dimen/login_ctrl_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_passkey"
            android:text="Sign In" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/txtHelpInfo"
            style="@style/RegularTextActivationLoginMsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/btnLogin"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="@dimen/login_margin"
            android:text="@string/help_forgot_passkey"
            android:textSize="14sp" />
        <!--  <TextView
              android:id="@+id/lblSISwitchMode"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/btnLogin"
              android:textSize="18sp"
              android:gravity="left"
              android:paddingTop="2dp"
              android:layout_marginTop="10dp"
              android:textStyle="bold"
              android:textColor="#0000FF"
              android:text="Switch to Training Mode" /> -->

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            android:id="@+id/txtVersionInfo"
            style="@style/SmallerRegularText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txtHelpInfo"
            android:layout_marginLeft="1dip"
            android:layout_marginTop="@dimen/login_margin"
            android:layout_marginBottom="1dip"
            android:text="version number" />
    </RelativeLayout>
</ScrollView>

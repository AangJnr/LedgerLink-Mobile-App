            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Ledger Link" />

            android:layout_marginLeft="20dip"
            -->

        <ImageView
            style="@style/Logo"
            android:id="@+id/imgVALogo"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_content_desc"
           />


        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/InTextHeader"
            android:id="@+id/lbl_vsla_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" "
            android:layout_below="@+id/imgVALogo"
            android:layout_alignLeft="@+id/edt_passkey" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:id="@+id/lblLoginMsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" "
            android:layout_below="@+id/imgVALogo"
            android:layout_alignLeft="@+id/edt_passkey" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularTextLogin"
            android:id="@+id/lblPassKeyPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Passkey "
            android:layout_below="@+id/imgVALogo"
            android:layout_alignRight="@+id/edt_passkey" />

        <org.applab.digitizingdata.fontutils.TypefaceEditText
            style="@style/EditTextStyle"
            android:id="@+id/edt_passkey"
            android:layout_below="@id/lbl_vsla_name"
            android:layout_width="265dip"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Enter Pass Key Here"
          />

        <requestFocus />


        <org.applab.digitizingdata.fontutils.TypefaceButton
            style="@style/LoginButton"
            android:id="@+id/btnLogin"
            android:layout_width="265dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_passkey"
            android:text="Log In" />

        <org.applab.digitizingdata.fontutils.TypefaceTextView
            style="@style/RegularText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnLogin"
            android:text="Forgot your pass key: \nPlease call 078000000"
            android:layout_alignLeft="@+id/btnLogin"/>
